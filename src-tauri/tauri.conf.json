{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Focus",
  "version": "2.0.0",
  "identifier": "com.focus.timer.v2",
  "build": {
    "frontendDist": "../public"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Focus",
        "url": "index.html",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../public/icons/icon.png",
      "../public/icons/512.ico"
    ]
  }
}